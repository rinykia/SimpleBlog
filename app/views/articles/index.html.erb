<% @articles.each do |article| %>
<h2><%= article.title %></h2>
<p><%= article.text %></p>
<p>
  <%= link_to 'Show', article_path(article) %>

  <% if current_user == article.user %>
    <%= link_to 'Edit', edit_article_path(article) %>
  <% end %>
  <%= link_to 'Destroy', article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %>

</p>
<hr/>

<% end %>
