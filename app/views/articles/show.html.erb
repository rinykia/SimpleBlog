<h1><%= @article.title %></h1>
<p><%= @article.text %></p>

<h3>Comments</h3>
<% @article.comments.each do |comment| %>
<i><%= comment.author %> said:</i><br/>
<p><%= comment.body %></p>
<% end %>

<h3>Add comments</h3>
<%= form_for([@article, @article.comments.build]) do |f| %>
<p> 
  <%= f.label :author %><br/>
  <%= f.text_field :author %>
</p>

<p> 
  <%= f.label :body %><br/>
  <%= f.text_area :body %>
</p>

<p> 
   <%= f.submit %>
</p>
<% end %>

