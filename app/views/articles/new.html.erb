<h1>New article</h1>
<%= form_for :article, url: articles_path do |f| %>
<p>
  <%= f.label :title %><br/>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :avatar %><br/>
  <%= f.file_field :avatar %>
</p>

<p>
  <%= f.label :text %><br/>
  <%= f.text_area :text %>
  <%= f.hidden_field :user_id, value: current_user.id %>
</p>

<p>
   <%= f.submit %>
</p>
<% end %>
